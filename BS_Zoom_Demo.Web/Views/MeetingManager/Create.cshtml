@using BS_Zoom_Demo.Web.Models.Teachers
@model CreateMeetingViewModel

@section scripts
{
    <environment names="Development">
        <script src="~/Views/MeetingManager/create.js" asp-append-version="true"></script>
        <link href="~/lib/bootstrap-paper/bootstrap.css" rel="stylesheet" asp-append-version="true" />
    </environment>

    <environment names="Staging,Production">
        <script src="~/Views/MeetingManager/create.min.js" asp-append-version="true"></script>
        <link href="~/lib/bootstrap-paper/bootstrap.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}

<h2>
    @L("NewMeeting")
</h2>

<form id="MeetingCreationForm" style="margin:30px;">

    <div class="form-group">
        <label for="Title">@L("Title")</label>
        <input type="text" name="Title" class="form-control" placeholder="@L("Title")" required maxlength="@BS_Zoom_Demo.Meetings.Meeting.MaxTitleLength">
    </div>

    <div class="form-group">
        <label for="Description">@L("Description")</label>
        <input type="text" name="Description" class="form-control" placeholder="@L("Description")" maxlength="@BS_Zoom_Demo.Meetings.Meeting.MaxDescriptionLength">
    </div>

    <div class="form-group">
        @Html.Label(L("AssignedPerson"))
        @Html.DropDownList(
            "AssignedPersonId",
            Model.Teachers,
            new
            {
                @class = "form-control",
                id = "AssignedPersonCombobox"
            })
    </div>

    <button type="submit" class="btn btn-default">@L("Save")</button>

</form>
@using Abp.Web.Mvc.Extensions

@{
    ViewBag.Title = L("Meetings");
    ViewBag.ActiveMenu = PageNames.Meetings; //Matches with the menu name in SimpleTaskAppNavigationProvider to highlight the menu item
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Setting
                </h2>
            </div>
            <div class="body">
                <input type="hidden" value="@ViewBag.newJWTToken" id="access_token" />
                <input type="hidden" value="" id="meeting_id" />
                <input type="hidden" value="" id="meetting_password" />
                <input type="hidden" value="" id="tmpArgs" />
                <form id="setting_form">
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <div class="col-md-1">
                            <input type="text" name="topic_name" id="topic_name" value="" maxLength="100"
                                   placeholder="topic name" class="form-control">
                        </div>
                        <div class="col-md-1">
                            Meeting Type
                        </div>
                        <div class="col-md-2">
                            <select id="meeting_type" class="sdk-select">
                                <option value=1>Instant meeting</option>
                                <option value=2>Scheduled meeting</option>
                                <option value=3>Recurring meeting with no fixed time</option>
                                <option value=8>Recurring meeting with fixed time</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <input type="text" name="start_time" id="start_time" value="" placeholder="start_time" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <input type="number" name="duration" id="duration" value="" placeholder="duration" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <input type="text" name="schedule_for" id="schedule_for" value="" maxLength="100"
                                   placeholder="schedule for" class="form-control">
                        </div>
                        <div class="col-md-1">
                            Time Zones
                        </div>
                        <div class="col-md-1">
                            <select id="time_zone" class="sdk-select">
                                <option value="UTC">GMT</option>
                                <option value="Asia/Bangkok">Bangkok</option>
                                <option value="Asia/Saigon">Viet Nam</option>
                                <option value="Asia/Jakarta">Jakarta</option>
                            </select>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <div class="col-md-2">
                            <input type="password" name="password" id="password" value="" placeholder="password" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <input type="text" name="agenda" id="agenda" value="" placeholder="meeting description" class="form-control">
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <label>Recurrence</label>
                    </div>
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <div class="col-md-1">
                            Recurrence Type
                        </div>
                        <div class="col-md-1">
                            <select id="recurrence_type" class="sdk-select">
                                <option value=1>Daily</option>
                                <option value=2>Weekly</option>
                                <option value=3>Monthly</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Repeat Interval
                        </div>
                        <div class="col-md-1">
                            <input type="number" name="repeat_interval" id="repeat_interval" value="1" placeholder="repeat interval" class="form-control">
                        </div>
                        <div class="col-md-1">
                            Weekly Days
                        </div>
                        <div class="col-md-1">
                            <select id="weekly_days" class="sdk-select">
                                <option value=1>Sunday</option>
                                <option value=2>Monday</option>
                                <option value=3>Tuesday</option>
                                <option value=4>Wednesday</option>
                                <option value=5>Thursday</option>
                                <option value=6>Friday</option>
                                <option value=7>Saturday</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Monthly Day
                        </div>
                        <div class="col-md-1">
                            <input type="number" name="monthly_day" id="monthly_day" value="1" placeholder="monthly day" class="form-control" min="1" max="31">
                        </div>
                        <div class="col-md-1">
                            Monthly Week
                        </div>
                        <div class="col-md-2">
                            <select id="monthly_week" class="sdk-select">
                                <option value=-1>Last week of the month</option>
                                <option value=1>First week of the month</option>
                                <option value=2>Second week of the month</option>
                                <option value=3>Third week of the month</option>
                                <option value=4>Fourth week of the month</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Monthly Week Day
                        </div>
                        <div class="col-md-1">
                            <select id="monthly_week_day" class="sdk-select">
                                <option value=1>Sunday</option>
                                <option value=2>Monday</option>
                                <option value=3>Tuesday</option>
                                <option value=4>Wednesday</option>
                                <option value=5>Thursday</option>
                                <option value=6>Friday</option>
                                <option value=7>Saturday</option>
                            </select>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <div class="col-md-2">
                            <input type="number" name="end_times" id="end_times" value="" placeholder="end times" class="form-control" max="50">
                        </div>
                        <div class="col-md-2">
                            <input type="text" name="end_date_time" id="end_date_time" value="" placeholder="end date time" class="form-control">
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <label>Setting</label>
                    </div>
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <div class="col-md-1">
                            Host Video
                        </div>
                        <div class="col-md-1">
                            <select id="host_video" class="sdk-select" style="width:100px !important;">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Participant Video
                        </div>
                        <div class="col-md-1">
                            <select id="participant_video" class="sdk-select" style="width:100px !important;">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Cn Meeting
                        </div>
                        <div class="col-md-1">
                            <select id="cn_meeting" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            In Meeting
                        </div>
                        <div class="col-md-1">
                            <select id="in_meeting" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Join Before Host
                        </div>
                        <div class="col-md-1">
                            <select id="join_before_host" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Mute Upon Entry
                        </div>
                        <div class="col-md-1">
                            <select id="mute_upon_entry" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <div class="col-md-1">
                            Watermark
                        </div>
                        <div class="col-md-1">
                            <select id="watermark" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Use Pmi
                        </div>
                        <div class="col-md-1">
                            <select id="use_pmi" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Enforce Login
                        </div>
                        <div class="col-md-1">
                            <select id="enforce_login" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <input type="text" name="enforce_login_domains" id="enforce_login_domains" value="" placeholder="enforce login domains" class="form-control">
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <div class="col-md-1">
                            Approval Type
                        </div>
                        <div class="col-md-2">
                            <select id="approval_type" class="sdk-select">
                                <option value=0>Automatically approve</option>
                                <option value=1>Manually approve</option>
                                <option value=2 selected>No registration required</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Registration Type
                        </div>
                        <div class="col-md-2">
                            <select id="registration_type" class="sdk-select">
                                <option value=1 selected>Attendees register once and can attend any of the occurrences</option>
                                <option value=2>Attendees need to register for each occurrence to attend</option>
                                <option value=3>Attendees register once and can choose one or more occurrences to attend</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Audio
                        </div>
                        <div class="col-md-2">
                            <select id="audio" class="sdk-select">
                                <option value="both" selected>Both Telephony and VoIP</option>
                                <option value="telephony">Telephony Only</option>
                                <option value="voip">VoIP only</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Auto Recording
                        </div>
                        <div class="col-md-1">
                            <select id="auto_recording" class="sdk-select">
                                <option value="local">Record on local</option>
                                <option value="cloud">Record on cloud</option>
                                <option value="none" selected>Disabled</option>
                            </select>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:auto; margin-top:auto;">
                        <div class="col-md-1">
                            <input type="text" name="alternative_hosts" id="alternative_hosts" value="" maxLength="100"
                                   placeholder="alternative hosts" class="form-control">
                        </div>
                        <div class="col-md-1">
                            Close Registration
                        </div>
                        <div class="col-md-1">
                            <select id="close_registration" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Waiting Room
                        </div>
                        <div class="col-md-1">
                            <select id="waiting_room" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            <input type="text" name="global_dial_in_ountries" id="global_dial_in_ountries" value="" maxLength="100"
                                   placeholder="global dial in ountries" class="form-control">
                        </div>
                        <div class="col-md-1">
                            <input type="text" name="contact_name" id="contact_name" value="" maxLength="100"
                                   placeholder="contact name" class="form-control">
                        </div>
                        <div class="col-md-1">
                            <input type="text" name="contact_email" id="contact_email" value="" maxLength="100"
                                   placeholder="contact email" class="form-control">
                        </div>
                        <div class="col-md-1">
                            Registrans Email Notification
                        </div>
                        <div class="col-md-1">
                            <select id="registrans_email_notification" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            Meeting Authentication
                        </div>
                        <div class="col-md-1">
                            <select id="meeting_authentication" class="sdk-select">
                                <option value=0 selected>False</option>
                                <option value=1>True</option>
                            </select>
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div class="col-md-8 text-left">
                        <div class="row">
                            <div class="col-md-1">
                                <button type="button" class="btn btn-primary" id="create_meeting">Create</button>
                            </div>
                            <div class="col-md-4">
                                <input type="text" name="display_name" id="display_name" value="1.8.1#CDN" maxLength="100"
                                       placeholder="Name" class="form-control" required>
                            </div>
                            <div class="col-md-7">
                                <input type="text" name="start_url" id="start_url" value="" placeholder="start url" maxlength="1000" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-right">
                        <button type="submit" class="btn btn-primary" id="join_meeting_host">Join Host</button>
                        <button type="submit" class="btn btn-primary" id="join_meeting_attendee">Join Attendee</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="MeetingModal" tabindex="-1" role="dialog" aria-labelledby="MeetingModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>

<script src="https://source.zoom.us/1.8.1/lib/vendor/react.min.js"></script>
<script src="https://source.zoom.us/1.8.1/lib/vendor/react-dom.min.js"></script>
<script src="https://source.zoom.us/1.8.1/lib/vendor/redux.min.js"></script>
<script src="https://source.zoom.us/1.8.1/lib/vendor/redux-thunk.min.js"></script>
<script src="https://source.zoom.us/1.8.1/lib/vendor/jquery.min.js"></script>
<script src="https://source.zoom.us/1.8.1/lib/vendor/lodash.min.js"></script>
<script src="https://source.zoom.us/zoom-meeting-1.8.1.min.js"></script>
<script src="~/Views/Meeting/vconsole.min.js"></script>
<script src="~/Views/Meeting/Index.js"></script>
<script src="~/Views/Meeting/tool.js"></script>
<script src="~/Views/Meeting/meeting.js"></script>